<h1 class="my-3" style="text-align: center;">List of Locations to Rent</h1>
<div class="container">
  <div class="row">
  <% @listings.each do |listing| %>
    <% listing.photos.each do |photo| %>
      <div class="col-12 col-md-4">
        <div class="card-category my-3 text-white text-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path photo.key %>')">
        <%= link_to listing.title , listing_path(listing) %>
        </div>
      </div>
    <% end %>
  <% end %>
  </div>
</div>

<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAP_BOX_API_KEY'] %>">
</div>

