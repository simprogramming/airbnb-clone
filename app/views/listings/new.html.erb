<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>So You want to host a location for future events?</h1>
      <p>No problem! Fill out the form below to let others know more about your location.</p>

      <%= simple_form_for @listing do |f| %>
        <%= f.input :title, placeholder: 'Golf Club'%>
        <%= f.input :category %>
        <%= f.input :price, label: 'Price/day', placeholder: '1500$' %>
        <%= f.input :address, placeholder: '555 Ave Park, h4h 2b2' %>
        <%= f.input :city, placeholder: 'Montreal' %>
        <%= f.input :capacity, placeholder: '20+'%>
        <%= f.input :description, as: :text, placeholder: 'Nice location to host corporate events..' %>
        <%= f.input :url %>

        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
