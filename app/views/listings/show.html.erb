<div id="carouselExampleIndicators" class="carouselshow carousel slide" data-ride="carousel">
  <div class="coolgradientlarge"></div>
  <ol class="carousel-indicators">
    <% @listing.photos.each_with_index do |photo, i|%>
      <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>" class="<%= "active" if photo == @listing.photos.first %>"></li>
    <% end %>
  </ol>
  <div class="carousel-inner">
    <% @listing.photos.each do |photo|%>
      <div class="showelement">
          <h1 class="my-3"><%= @listing.title %></h1>
          <%= link_to new_listing_booking_path(@listing) do %>
            <div class="btn"> Book this place </div>
          <% end %>
        </div>
        <div class="information">
          <i class="fas fa-angle-double-right"></i>
          <%= @listing.category %>
          <i class="fas fa-user-friends"></i>
          <%= @listing.capacity %>
        </div>
      <div data-interval="false" class="carouselshow-item carousel-item <%= "active" if photo == @listing.photos.first %>">
        <img src="<%= cl_image_path photo.key %>" class="d-block w-100" alt="...">
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<div class="container">
  <div class="description m-4 p-5 shadow">
    <h2>Description:</h2>
    <p><%= @listing.description %></p>
  </div>
  <div>
    <p> <%= link_to "Edit", edit_listing_path %> <%= link_to "Delete",listing_path(@listing), method: :delete, data: { confirm: 'Are you sure you want to delete?' } %></p>
  </div>
</div>
